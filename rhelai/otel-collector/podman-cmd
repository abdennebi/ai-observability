# USE THIS ONE to collect and visualize on local system
podman run --rm -d --name otelcol-host --network=host --user=0 \
  -v $(pwd)/otc:/otc:Z \
  -v $(pwd)/otel-config.yaml:/etc/otelcol/config.yaml:Z \
  quay.io/sallyom/rh-otel-collector:latest --config /etc/otelcol/config.yaml

# quay.io/sallyom/rh-otel-collector:latest built from RH observability repo

